{
  "settings": {
    "analysis": {
      "analyzer": {
        "whitespace_removed": {
          "tokenizer": "keyword",
          "filter": [
            "lowercase"
          ],
          "char_filter": [
            "remove_whitespace"
          ]
        },
        "address_text": {
          "type": "custom",
          "tokenizer": "classic",
          "ignore_case": true,
          "char_filter": [
            "remove_apostrophes"
          ],
          "filter": [
            "lowercase",
            "common_street_terms_synonyms",
            "ignore_unmeaningful_building_words",
            "remove_numbers"
          ]
        },
        "extract_number_analyzer" : {
          "tokenizer" : "standard",
          "filter" : ["extract_numbers", "decimal_digit"]
        }
      },
      "char_filter": {
        "remove_whitespace": {
          "type": "pattern_replace",
          "pattern": " ",
          "replacement": ""
        },
        "remove_apostrophes": {
          "type": "pattern_replace",
          "pattern": "'",
          "replacement": ""
        }
      },
      "filter": {
        "common_street_terms_synonyms": {
          "type": "synonym",
          "lenient": false,
          "synonyms": [ "road, raod, lane, lanes, street, streat, avenue, rd, str, avn, ave, close => road" ]
        },
        "ignore_unmeaningful_building_words": {
          "type": "stop",
          "ignore_case": true,
          "stopwords": [
            "flat",
            "flt",
            "apt",
            "apartment",
            "fat"
          ]
        },
        "extract_numbers" : {
          "type" : "keep_types",
          "types" : [ "<NUM>" ]
        },
        "remove_numbers" : {
          "type" : "keep_types",
          "types" : [ "<NUM>" ],
          "mode": "exclude"
        }
      }
    }
  },
  "mappings" : {
    "properties" : {
      "lpi_last_update_date" : {
        "type" : "integer"
      },
      "lpi_key" : {
        "type" : "keyword"
      },
      "lpi_logical_status" : {
        "type" : "text",
        "fields" : {
          "keyword" : {
            "type" : "keyword",
            "ignore_above" : 256
          }
        }
      },
      "building_number" : {
        "type" : "keyword",
        "fields": {
          "sort": {
            "type": "icu_collation_keyword",
            "index": false,
            "numeric": true,
            "case_level": false
          }
        }
      },
      "gazetteer" : {
        "type" : "text",
        "fields" : {
          "keyword" : {
            "type" : "keyword",
            "ignore_above" : 256
          }
        }
      },
      "line1" : {
        "type" : "text",
        "analyzer": "standard",
        "copy_to": "full_address",
        "similarity": "boolean"
      },
      "line2" : {
        "type" : "text",
        "analyzer": "standard",
        "similarity": "boolean",
        "copy_to": "full_address"
      },
      "line3" : {
        "type" : "text",
        "analyzer": "standard",
        "copy_to": "full_address",
        "similarity": "boolean"
      },
      "line4" : {
        "type" : "text",
        "analyzer": "standard",
        "similarity": "boolean",
        "copy_to": "full_address"
      },
      "full_address" : {
        "type" : "text",
        "analyzer": "address_text",
        "similarity": "boolean",
        "fields": {
          "extracted_numbers": {
            "type": "text",
            "analyzer": "extract_number_analyzer",
            "similarity": "boolean"
          },
          "exact_text": {
            "type" : "text",
            "analyzer": "standard",
            "similarity": "boolean"
          }
        }
      },
      "neverexport" : {
        "type" : "boolean"
      },
      "paon_start_num" : {
        "type" : "integer"
      },
      "parent_uprn" : {
        "type" : "long"
      },
      "postcode" : {
        "type" : "text",
        "analyzer" : "whitespace_removed",
        "fielddata" : true
      },
      "property_shell" : {
        "type" : "boolean"
      },
      "street_description" : {
        "type" : "text",
        "analyzer" : "whitespace_removed",
        "fielddata" : true
      },
      "town" : {
        "type" : "keyword"
      },
      "uprn" : {
        "type" : "long"
      },
      "usrn" : {
        "type" : "integer"
      },
      "sao_text" : {
        "type" : "keyword"
      },
      "unit_number" : {
        "type" : "integer"
      },
      "blpu_class" : {
        "type" : "text",
        "fields" : {
          "keyword" : {
            "type" : "keyword",
            "ignore_above" : 256
          }
        }
      },
      "usage_primary" : {
        "type" : "text",
        "fields" : {
          "keyword" : {
            "type" : "keyword",
            "ignore_above" : 256
          }
        }
      },
      "blpu_last_update_date": {
        "type": "integer"
      },
      "blpu_start_date": {
        "type": "integer"
      }
    }
  }
}
